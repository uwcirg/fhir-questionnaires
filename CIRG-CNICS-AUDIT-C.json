        {
          "valueCoding": {
            "code": "AUDIT-C-1-9",
            "display": "10 or more"
          }
        }
      ]
    },
    {
      "linkId": "AUDIT-C-2",
      "text": "How often do you have four or more drinks on one occasion?",
      "type": "choice",
      "answerOption": [
        {
          "valueCoding": {
            "code": "AUDIT-C-2-0",
            "display": "Never"
          }
        },
        {
          "valueCoding": {
            "code": "AUDIT-C-2-1",
            "display": "Less than monthly"
          }
        },
        {
          "valueCoding": {
            "code": "AUDIT-C-2-2",
