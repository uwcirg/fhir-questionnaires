    {
      "linkId": "AUDIT-C-num-falls-text",
      "text": "Fall risk (AUDIT-C): number of falls",
      "type": "string",
      "readOnly": true,
      "extension": [
        {
          "url": "http://hl7.org/fhir/uv/sdc/StructureDefinition/sdc-questionnaire-calculatedExpression",
          "valueExpression": {
            "language": "text/fhirpath",
            "expression": "iif(%resource.item.where(linkId='AUDIT-C-0').answer.valueCoding.code = 'AUDIT-C-0-0', 'None', iif(%resource.item.where(linkId='AUDIT-C-0').answer.valueCoding.code = 'AUDIT-C-0-1', '1', iif(%resource.item.where(linkId='AUDIT-C-0').answer.valueCoding.code = 'AUDIT-C-0-2', '2', iif(%resource.item.where(linkId='AUDIT-C-0').answer.valueCoding.code = 'AUDIT-C-0-3', '3 or more', null))))"
          }
        }
      ]
    },
    {
      "linkId": "AUDIT-C-ed-visit-bool",
      "text": "Fall risk (AUDIT-C) Questionnaire: E/D Visit",
      "type": "boolean",
      "readOnly": true,
      "extension": [
        {
          "url": "http://hl7.org/fhir/uv/sdc/StructureDefinition/sdc-questionnaire-calculatedExpression",
          "valueExpression": {
            "language": "text/fhirpath",
            "expression": "%resource.item.where(linkId = 'AUDIT-C-0').answer.valueCoding.code.exists() and %resource.item.where(linkId = 'AUDIT-C-0').answer.valueCoding.code != 'AUDIT-C-0-0' and %resource.item.where(linkId = 'AUDIT-C-1').answer.valueCoding.code = 'AUDIT-C-1-0'"
          }
        }
      ]
    }
